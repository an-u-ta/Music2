@model IEnumerable<Music.Models.Album>

@{
    ViewBag.Title = "Index";
}



<h2>Albums</h2>

<p class="btn btn-warning btn-sm">
    @Html.ActionLink("Add Album", "Create")


    @using (Html.BeginForm())
    {
        <p>
            <input type="submit" value="Search Titles" /> @Html.TextBox("SearchString") <br />
            
        </p>
    }
</p>
    

</form>


    <table class="table">
  

        <tr style="background-color: lightblue";  >
            <th>
               @Html.DisplayNameFor(model => model.Artist)
             </th>
            <th>
               @Html.DisplayNameFor(model => model.Genre)
              </th>
            <th>
               @Html.DisplayNameFor(model => model.Title)
               </th>
            <th>
               @Html.DisplayNameFor(model => model.Price)
               
</th>
            <th>
                 <p>Likes</p>
             </th>
            <th></th>

        </tr >

        @foreach (var item in Model)
        {
            <script type="text/javascript">
                    var add = (function () {
                    var counter = 0;
                    return function () {return counter += 1;}
                })();

                function myFunction() {
                   // for (i = 0; i < item.length; i++){
                        document.getElementById( "displayCount").innerHTML = add();
                    }
              //  }
      
            </script>
            <tr style="background-color: lightgrey";>

                <td>
                    @Html.DisplayFor(modelItem => item.Artist.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <button type="button"  class="btn btn-success btn-sm" onclick="myFunction()">
                        <span class="glyphicon glyphicon-thumbs-up"></span> Like
                     </button>
                    <span id="displayCount"></span>
                   
                </td>
                <td class="btn btn-default btn-sm">
                    @Html.ActionLink(" ", "Playlist", new { id = item.AlbumID }, new { @class = " glyphicon glyphicon-list" })
                </td>
                <td class="btn btn-warning btn-sm">
                    @Html.ActionLink(" ", "Edit", new { id = item.AlbumID }, new { @class = " glyphicon glyphicon-edit" })
                </td>
                <td class="btn btn-success btn-sm">
                    @Html.ActionLink(" ", "Details", new { id = item.AlbumID }, new { @class = " glyphicon glyphicon-info-sign " })
                </td>
                <td class="btn btn-danger btn-sm">
                    @Html.ActionLink(" ", "Delete", new { id = item.AlbumID }, new { @class = "glyphicon glyphicon-trash" })
                </td>

            </tr>
        }

</table>

